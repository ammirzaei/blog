
<div class="row mx-auto" style="width: 70%;">
    <div class="w-100 d-flex flex-row align-items-center justify-content-between border bg-white rounded-lg p-3 mb-3">
        <div class="d-flex align-items-center position-relative" style="gap: 10px; right: 10px;">
            <img src="/uploads/user/<%= user.avatar %>" style="width: 70px; height: 70px; border-radius: 50%;" />
            <div class="d-flex flex-column" style="gap: 2px;">
                <span style="font-size: 17px;"><%= user.fullName %></span>
                <span style="color: #6e6e6e;font-size: 15px;"><%= user.bio %></span>
            </div>
        </div>
        <div class="d-flex flex-column" style="gap: 2px;">
            <span class="text-primary"><%= user.follower %> دنبال کننده</span>
            <span class="text-secondary" style="font-size: 15px;">تاریخ عضویت : <%= formatDate(user.createAt)%></span>
        </div>
    </div>
    <% for(const blog of blogs) {%>
        <div class="col-lg-12 my-2">
          <a href="/blog/<%= blog.id %>" target="_blank" class="text-decoration-none" style="color: #000;">
            <div class="card p-3" style="height: 200px;">
              <div class="d-flex align-items-start justify-content-between" style="gap: 20px;">
                <div class="w-100">
                  <div class="d-flex align-items-center position-relative" style="gap: 10px;">
                      <img src="/uploads/user/<%= blog.user.avatar %>" style="width: 40px; height: 40px; border-radius: 50%;" />
                      <span style="font-size: 17px;"><%= blog.user.fullName %></span>
                      <span style="color: #6e6e6e;font-size: 14px;"><%= formatDateTime(blog.createdAt) %></span>
                  </div>
                  <h2 class="card-title font-weight-bolder mt-3" style="font-size: 19px;"><%= blog.title %> </h2>
                  <p class="card-text" style="color: #606060; font-size: 15px;"><%= truncateString(blog.shortDescription, 150) %> </p>
                </div>
                <img src="/uploads/blogs/<%= blog.image %> " class="rounded-lg" alt="<%= blog.title %> " style="height: 160px; width: 160px;">
              </div>
            </div>
          </a>
        </div>     
      <% } %> 

      <div class="col-lg-12 my-4 mx-auto">
        <%- include('./../includes/pagination.ejs') %>
      </div>
</div>