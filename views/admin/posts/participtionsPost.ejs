<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom"
>
  <h1 class="h2">
    مشارکت ها
    <span class="text-primary" style="font-size: 18px;">(<%= participtions.length %>)</span>
  </h1>
</div>

<div class="d-flex align-items-center mb-3" style="gap: 20px;">
  <h2 class="h3"><%= blog.title %></h2>
</div>
<div class="table-responsive">
  <table class="table table-bordered table-hover table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>کاربر</th>
        <th>وضعیت</th>
        <th>تاریخ درخواست</th>
        <th>عملیات</th>
      </tr>
    </thead>
    <tbody>
      <% let num = 0; %> 
    <% for(const particiption of participtions){ %>
      <% num++ %> 
      <tr>
        <td><%= num %> </td>
        <td>
          <div class="d-flex align-items-center" style="gap: 8px;">
              <img src="/uploads/user/<%= particiption.user.avatar %>" style="width: 40px; height: 40px; border-radius: 50%;"/>
              <span><%= particiption.user.fullName %></span>
          </div>
        </td>
        <td>
          <span class="badge <%= particiption.status ? 'badge-success':'badge-danger' %> ">
            <%= particiption.status ? 'تایید شده' : 'تایید نشده' %>
          </span>
        </td>
        <td><%= formatDateTime(particiption.createdAt) %> </td>
        <td>
          <a href="#" onclick="confirm('از تغییر وضعیت مطمئن هستید؟') ? location.replace('/dashboard/change-particiption-status/<%= particiption.id %>') : ''" class="btn <%= particiption.status ? "btn-danger" : 'btn-success' %> btn-sm">
            <%= particiption.status ? 'عدم تایید درخواست' : 'تایید کردن درخواست' %>
          </a> 
        </td>
      </tr>
      <% } %> 
    </tbody>
  </table>
</div>