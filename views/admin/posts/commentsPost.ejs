<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom"
>
  <h1 class="h2">
    نظرات
    <span class="text-primary" style="font-size: 18px;">(<%= comments.length %>)</span>
  </h1>
</div>

<div class="d-flex align-items-center mb-3" style="gap: 20px;">
  <h2 class="h3"><%= blog.title %></h2>
</div>
<div class="table-responsive">
  <table class="table table-bordered table-hover table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>کاربر</th>
        <th>متن نظر</th>
        <th>تاریخ ایجاد</th>
        <th>عملیات</th>
      </tr>
    </thead>
    <tbody>
      <% let num = 0; %> 
    <% for(const comment of comments){ %>
      <% num++ %> 
      <tr>
        <td><%= num %> </td>
        <td>
          <div class="d-flex align-items-center" style="gap: 8px;">
              <img src="/uploads/user/<%= comment.user.avatar %>" style="width: 40px; height: 40px; border-radius: 50%;"/>
              <span><%= comment.user.fullName %></span>
          </div>
        </td>
        <td>
          <%= comment.message %>
        </td>
        <td><%= formatDateTime(comment.createdAt) %> </td>
        <td>
          <a href="#" onclick="confirm('از حذف این نظر مطمئن هستید؟') ? location.replace('/dashboard/delete-comment/<%= comment.id %>') : ''" class="btn btn-danger btn-sm">حذف</a> 
        </td>
      </tr>
      <% } %> 
    </tbody>
  </table>
</div>