<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom"
>
  <h1 class="h2">تماس با ما</h1>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-hover table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>نام و نام خانوادگی</th>
        <th>ایمیل</th>
        <th>متن پیام</th>
        <th>ip</th>
        <th>تاریخ ارسال</th>
        <th>عملیات</th>
      </tr>
    </thead>
    <tbody>
      <% let num = 0; %> 
     <% for(const contact of contacts){ %>
      <% num++ %> 
      <tr>
        <td><%= num %> </td>
        <td>
          <%= contact?.fullName %>
        </td>
        <td>
          <%= contact?.email %>
        </td>
        <td>
          <%= contact.message %>
        </td>
        <td>
          <%= contact.ipAddress %>
        </td>
        <td><%= formatDateTime(contact.createdAt) %> </td>
        <td>
          <a href="#" onclick="confirm('از حذف این مورد مطمئن هستید؟') ? location.replace('/dashboard/delete-contact/<%= contact.id %>') : ''" class="btn btn-danger btn-sm">حذف</a>
        </td>
      </tr>
      <% } %> 
    </tbody>
  </table>
</div>
