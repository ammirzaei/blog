<div class="row">
   <div class="col-12">
    <div class="bg-light">
        <div class="w-25 text-center mx-auto">
            <%- include("../includes/userMessages.ejs") %> 
        </div>
        <form class="mx-auto contact" action="/contact-us" method="post">
            <fieldset>
                <legend class="text-center pb-2">تماس با ما</legend>

                <!-- Name input-->
                <div class="form-group">
                    <label class="control-label" for="fullName"
                        >نام و نام خانوادگی</label
                    >
                    <input
                    id="fullName"
                    name="fullName"
                    type="text"
                    placeholder="نام و نام خانوادگی"
                    class="form-control"
                />
                <small id="fullName" class="form-text text-danger text-left"><%= errors.find(e=>e.name == 'fullName')  ? errors.find(e=>e.name == 'fullName').message : '' %> </small>
                </div>

                <!-- Email input-->
                <div class="form-group">
                    <label class="control-label" for="email"
                        >آدرس ایمیل</label
                    >
                    <input
                            id="email"
                            name="email"
                            type="text"
                            placeholder="ایمیل شما"
                            class="form-control"
                        />
                <small id="email" class="form-text text-danger text-left"><%= errors.find(e=>e.name == 'email')  ? errors.find(e=>e.name == 'email').message : '' %> </small>
                </div>

                <!-- Message body -->
                <div class="form-group">
                    <label class="control-label" for="message"
                        >پیام شما</label
                    >
                    <textarea
                    class="form-control"
                    id="message"
                    name="message"
                    placeholder="لطفاً پیام را در اینجا نوشته و ارسال کنید"
                    rows="5"
                ></textarea>
                <small id="message" class="form-text text-danger text-left"><%= errors.find(e=>e.name == 'message')  ? errors.find(e=>e.name == 'message').message : '' %> </small>
                </div>

                <div class="w-25 text-center">
                    <img src="/captcha.png" alt="captcha" />
                    <input
                        type="text"
                        class="form-control"
                        name="captcha"
                        id="captcha"
                        placeholder="کد امنیتی"
                    />
                    <small id="captcha" class="form-text text-danger text-left"><%= errors.find(e=>e.name == 'captcha')  ? errors.find(e=>e.name == 'captcha').message : '' %> </small>
                </div>

                <!-- Form actions -->
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-lg btn-primary btn-block mt-2">
                        ارسال پیام
                    </button>
                </div>
            </fieldset>
        </form>
    </div>
   </div>
</div>
